			<ComboBox Grid.Column="6" Width="80" Height="30" Text="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="5,5,0,5" FontSize="14" IsEnabled="False" TabIndex="14" />

		</Grid>
		<GroupBox Grid.Row="8" Header="Start Delay" Margin="12,0,0,0" Width="238" HorizontalAlignment="Left" Name="startDelayGB">
			<StackPanel Orientation="Horizontal">
				<CheckBox Content="Enable" Name="startDelayEnableCB" VerticalAlignment="Center" Margin="14,0,0,0" 
							Checked="startDelayEnableCB_Checked" Unchecked="startDelayEnableCB_Checked"/>
				<DatePicker Margin="20,0,0,0" Name="startDelayDateDP" Width="120" SelectedDateChanged="startDelayDateDP_SelectedDateChanged" />
			</StackPanel>
		</GroupBox>
		<GroupBox Grid.Row="8" Header="Days Off" Margin="0,0,12,0" Width="238" HorizontalAlignment="Right" Name="daysOffGB">
			<StackPanel Orientation="Horizontal">
				<CheckBox Content="Enable" Name="daysOffEnableCB" VerticalAlignment="Center" Margin="14,0,0,0" Checked="daysOffEnableCB_Checked" Unchecked="daysOffEnableCB_Checked"/>
				<dc:NumericUpDown x:Name="daysOffNUD" Width="111" Height="20" Margin="24,0,0,0" MaxValue="100" />
			</StackPanel>
		</GroupBox>
