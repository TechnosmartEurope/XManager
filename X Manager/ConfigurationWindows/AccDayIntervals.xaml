			<!-- 5 -->
			<RowDefinition/>
			<!-- 6 -->
			<RowDefinition Height="0.4*"/>
			<!-- 7 -->
			<RowDefinition Height="1.5*"/>
			<!-- 8 -->
			<RowDefinition Height="0.4*"/>
			<!-- 9 -->
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="0" Orientation="Horizontal">
			<Label Content="Intervals: " VerticalAlignment="Center" FontSize="14" Margin="12,0,0,0"/>
			<Button Height="20" Margin="20,0,0,0" Click="minusB" TabIndex="1" Width="20" Padding="0">
				<Path StrokeThickness="2" Data="M 5 10 L 15 10" Stroke="#FF00AADE" Width="20" Height="20"/>
			</Button>
			<Button Height="20" Margin="20,0,0,0" Click="plusB" TabIndex="2" Width="20" Padding="0">
				<Grid>
					<Path StrokeThickness="2" Data="M 5 10 L 15 10" Stroke="#FF00AADE" Width="20" Height="20"/>
					<Path StrokeThickness="2" Data="M 10 5 L 10 15" Stroke="#FF00AADE" Width="20" Height="20"/>
				</Grid>
			</Button>
		</StackPanel>

		<StackPanel Grid.Row="1" Orientation="Horizontal"  >
			<Label Content="Rate (Hz)" Margin="100,0,0,0" FontSize="14"/>
			<Label Content="Fullscale (g)" Margin="20,0,0,0" FontSize="14"/>
			<Label Content="Bit" Margin="40,0,0,0" FontSize="14"/>
			<Label Content="Seconds   /" Margin="60,0,0,0" FontSize="14"/>
			<Label Content="Minutes" Margin="10,0,0,0" FontSize="14"/>
		</StackPanel>

		<Grid Grid.Row="2" HorizontalAlignment="Left">
