			<ComboBox Grid.Column="6" Width="80" Height="30" Text="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="5,5,0,5" FontSize="14" IsEnabled="False" TabIndex="14"/>
		</Grid>

		<Grid Grid.Row="5" HorizontalAlignment="Left">
			<Grid.ColumnDefinitions>
