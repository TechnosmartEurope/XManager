				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<TextBox Grid.Column="0" x:Name="d1" Width="35" Text="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="10,5,0,5" FontSize="14" IsEnabled="False" Padding="0" RenderTransformOrigin="0,0" BorderThickness="0" />
			<TextBox Grid.Column="1" x:Name="e1" HorizontalAlignment="Left" Width="35" Text="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="5,5,0,5" FontSize="14" Padding="1" TextWrapping="Wrap" TabIndex="3" LostFocus="newH"/>
			<ComboBox Grid.Column="2" Width="80" Text="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="5,5,0,5" FontSize="14" TabIndex="4" Height="30" >
				<System:String>OFF</System:String>
				<System:String>1 Hz</System:String>
				<System:String>10 Hz</System:String>
				<System:String>25 Hz</System:String>
				<System:String>50 Hz</System:String>
				<System:String>100 Hz</System:String>
			</ComboBox>
			<ComboBox Grid.Column="3" Width="80" Text="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="5,5,0,5" FontSize="14" TabIndex="5" Height="30">
				<System:String>± 2g</System:String>
				<System:String>± 4g</System:String>
				<System:String>± 8g</System:String>
				<System:String>± 16g</System:String>
			</ComboBox>
			<ComboBox Grid.Column="4" x:Name="bit1CB" Width="80" Text="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="5,5,0,5" FontSize="14" TabIndex="6" Height="30">
				<System:String>8</System:String>
				<System:String>10</System:String>
				<!--<System:String>12</System:String>-->
			</ComboBox>
			<ComboBox Grid.Column="5" Width="80" Height="30" Text="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="5,5,0,5" FontSize="14" IsEnabled="False" TabIndex="7" VerticalAlignment="Center"/>
			<ComboBox Grid.Column="6" Width="80" Height="30" Text="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="5,5,0,5" FontSize="14" IsEnabled="False" TabIndex="8"/>
		</Grid>

